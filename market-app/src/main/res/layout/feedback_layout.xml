<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/marginBig"
        android:layout_marginEnd="@dimen/marginBig"
        android:background="@drawable/rounded_corners_white_10"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:isIndicator="true"
            android:numStars="4"
            android:stepSize="1"
            android:theme="@style/RatingBar" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/s1" />

        <TextView
            android:id="@+id/text"
            style="@style/Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:text="@string/we_appreciate_ur_feedback" />

        <EditText
            android:id="@+id/editText"
            style="@style/Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corners_grey"
            android:gravity="top|start"
            android:hint="@string/hint_enter_comments"
            android:lines="3"
            android:padding="10dp" />

        <Button
            android:id="@+id/actionButton"
            style="@style/PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/buttonHeight"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_corners_button"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/submit" />

    </LinearLayout>

</RelativeLayout>