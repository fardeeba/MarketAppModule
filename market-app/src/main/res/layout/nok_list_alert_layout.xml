<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:elevation="8dp"
    android:gravity="center"
    android:maxHeight="600dp"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/marginNormal"
    android:paddingEnd="@dimen/marginNormal">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/BoldFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/marginVerySmall"
        android:layout_marginRight="@dimen/marginVerySmall"
        android:alpha="0.9"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <com.skylarksit.module.ui.components.MyRecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginMedium"
        android:layout_marginBottom="@dimen/marginMedium"
        android:clipToPadding="false"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@color/darker_gray"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/actionButton"
        style="@style/ButtonPrimary"
        android:layout_width="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/cancelButton"
        style="@style/ButtonFont"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        android:minWidth="80dp"
        android:text="@string/close"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>

